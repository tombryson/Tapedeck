<div class="row-view">
 <div class="col-md-10">
    <h2>Album:</h2><h1><%= @album.title.titleize %></h1>
        <%= cl_image_tag(@album.image, :class => 'album-img') %>
        <p>Released: <%= @album.released.strftime '%A, %B %e, %Y' unless @album.released.nil? %></li></p>
    </div>
        <% if @current_user.id == @album.user_id || (@current_user.present? && @current_user.admin?) %>
        <br>
    <div class="controls">
        <%= link_to 'Edit Name', edit_album_path(@album) %>
        |
        <%= link_to 'Delete Album', @album, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
        <% end %>
        
</div>
